\section*{B is for Bayesian}

\begin{algorithm}[H]
	\caption{Exact rejection sampler}
	\begin{algorithmic}
	 \STATE Given $N$ the number of simulations
		\FOR {$i=1$ to $N$} 
			 \STATE Generate $p' \sim \pi(p)$
			 \STATE Simulate $D' \sim f(x|p')$
       \IF{$D'=D$} \STATE Accept $p'$ \ENDIF
		\ENDFOR
	 \RETURN accepted $p'$
	\end{algorithmic}
\end{algorithm}

